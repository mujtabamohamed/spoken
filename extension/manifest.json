{
  "manifest_version": 3,
  "name": "Spoken",
  "description": "AI-powered YouTube transcription at your fingertips. Fast, accurate, timestampedâ€”directly in your browser.",
  "version": "1.0.1",
  "author": "Spoken",

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "permissions": ["activeTab", "scripting", "storage", "sidePanel", "tabs"],

  "host_permissions": [
    "https://www.youtube.com/*",
    "https://youtube.com/*",
    "https://youtu.be/*",
    "https://api.openai.com/*",
    "http://localhost:3456/*"
  ],

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "side_panel": {
    "default_path": "sidepanel.html"
  },

  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*", "https://youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],

  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Open Spoken"
  },

  "minimum_chrome_version": "114"
}
